<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/main_background"
              android:layout_height="match_parent">
    <AutoCompleteTextView
            android:layout_width="294dp"
            android:hint="@string/aiport"
            android:layout_height="46dp"
            android:id="@+id/atxt_aiport" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:fontFamily="@font/alegreya"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_search"/>
    <ScrollView
            android:layout_width="401dp"
            android:layout_height="314dp" android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:id="@+id/scview_lastairports">
    </ScrollView>
    <Button
            android:text="@string/search"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_search" app:layout_constraintHorizontal_bias="0.498"
            android:textAlignment="center"
            android:fontFamily="@font/alegreya" android:background="@drawable/button_background"
            android:textSize="24sp" tools:layout_editor_absoluteY="202dp"/>
    <TextView
            android:text="@string/last_searches"
            android:layout_width="171dp"
            android:layout_height="38dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:id="@+id/textView4" android:fontFamily="@font/alegreya" android:textSize="24sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/scview_lastairports"/>
</androidx.constraintlayout.widget.ConstraintLayout>