<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/main_background"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal" android:orientation="vertical">
    <AutoCompleteTextView
            android:layout_width="362dp"
            android:hint="@string/aiport"
            android:layout_height="46dp"
            android:id="@+id/atxt_aiport" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:fontFamily="@font/alegreya"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:textSize="16sp"/>
    <Button
            android:text="@string/search"
            android:layout_width="114dp"
            android:layout_height="37dp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_search" app:layout_constraintHorizontal_bias="0.498"
            android:textAlignment="center"
            android:fontFamily="@font/alegreya" android:background="@drawable/button_background"
            android:textSize="18sp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/atxt_aiport"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:indeterminate="true" android:id="@+id/pb_progressbar"/>
    <TextView
            android:text="@string/last_searches"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:id="@+id/textView4" android:fontFamily="@font/alegreya" android:textSize="18sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/scview_lastairports"/>
    <ListView
            android:layout_width="385dp"
            android:layout_height="361dp" android:layout_marginEnd="1dp"
            android:fillViewport="true"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:id="@+id/scview_lastairports"/>
</LinearLayout>
