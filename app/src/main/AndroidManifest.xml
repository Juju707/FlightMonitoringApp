<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jujulad.skynetapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".airportFlights.FlightsByAirport"
                android:label="@string/title_activity_flights_by_airport"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name=".MainActivity"
                android:theme="@style/Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity"/>
        <activity android:name=".login.SigninActivity"/>
        <activity android:name=".airportFlights.FlightsByAirportActivity"/>
        <activity android:name=".flightnearby.FlightsNearbyActivity"/>
        <activity android:name=".airportFlights.PickAirportActivity"/>
        <activity android:name=".flightnearby.NearbyDetailsActivity"/>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>